{
  "manifest_version": 2,
  "name": "FigmaTW",
  "short_name": "FigmaTW",
  "description": "用於將 Figma 翻譯為繁體中文（台灣）的瀏覽器插件（figmaCN fork 版）",
  "version": "1.0",
  "homepage_url": "https://github.com/SiongSng/figma-taiwan-translation",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.figma.com/*"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  }
}